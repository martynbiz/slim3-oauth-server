{
    "name": "japantravel/api",
    "description": "API for accessing JapanTravel data (e.g. articles)",
    "homepage": "http://accounts.japantravel.com",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "~3.0",
        "martynbiz/slim3-controller": "dev-master",
        "martynbiz/php-validator": "dev-master",
        "monolog/monolog": "^1.17",
        "league/oauth2-server": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },
    "config": {
        "vendor-dir": "../vendor"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/library/"
        },
        "classmap": [
            "tests"
        ]
    }
}
